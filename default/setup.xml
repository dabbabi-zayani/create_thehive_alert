<setup>
  <block title="Custom Alerts">
        <text>Configure TheHive Server Settings</text>
    </block>
    <block title="Server" endpoint="admin/alert_actions" entity="create_thehive_alert">
        <input field="action.create_thehive_alert.param.url">
            <label>Server URL</label>
            <type>text</type>
        </input>
        <input field="action.create_thehive_alert.param.username">
            <label>TheHive Username</label>
            <type>text</type>
        </input>
        <input field="action.create_thehive_alert.param.password">
            <label>TheHive Password</label>
            <type>text</type>
        </input>
    </block>
</setup>
